{
  "compilerOptions": {
    "esModuleInterop": true,
    "isolatedModules": true,
    "module": "commonjs",
    "noEmitOnError": true,
    "outDir": "dist",
    "resolveJsonModule": true,
    "rootDir": "src",
    "sourceMap": true,
    "strict": true,
    "target": "ES2019",
    "moduleResolution": "node16"
  },
  "exclude": [
    "dist",
    "node_modules",
    "test"
  ]
}
